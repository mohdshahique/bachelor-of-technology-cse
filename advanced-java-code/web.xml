<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Session_and_cooies_demo</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>FirstDemo</servlet-name>
    <servlet-class>in.ac.jamiahamdard.SessionMgtServlets.FirstSessionDemoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FirstDemo</servlet-name>
    <url-pattern>/SessionDemo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CookiesDemo</servlet-name>
    <servlet-class>in.ac.jamiahamdard.SessionMgtServlets.HelloFormCookies</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CookiesDemo</servlet-name>
    <url-pattern>/HelloFormCookies</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReadCookiesDemo</servlet-name>
    <servlet-class>in.ac.jamiahamdard.SessionMgtServlets.ReadCookies</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReadCookiesDemo</servlet-name>
    <url-pattern>/ReadCookies</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>SessionInvalidate</display-name>
    <servlet-name>SessionInvalidate</servlet-name>
    <servlet-class>in.ac.jamiahamdard.SessionMgtServlets.SessionInvalidate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SessionInvalidate</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>